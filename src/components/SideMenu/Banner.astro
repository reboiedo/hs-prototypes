---
const { title, linkText, linkHref } = Astro.props;
---

<div class="banner">
  <span class="banner-title">{title}</span>
  <a href={linkHref} class="banner-link">{linkText}</a>
</div>

<style>
  a {
    /* text-decoration: none; */
    color: var(--color-white);
  }

  .banner {
    color: white;
    position: relative;
    z-index: 700;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-xs);
    padding-inline: var(--space-s-m);
    background: linear-gradient(to right, var(--color-purple-300), var(--color-purple-500));
    height: 48px;
  }

</style>