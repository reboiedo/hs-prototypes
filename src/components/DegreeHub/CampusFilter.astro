---
import type { CampusFilter } from './types';

interface Props {
  options: CampusFilter[];
  displayNames: Record<CampusFilter, string>;
}

const { options, displayNames } = Astro.props;
---

<div class="campus-filter body-sm">
  <select id="campus-select" class="campus-select">
    {options.map(option => (
      <option value={option}>{displayNames[option]}</option>
    ))}
  </select>
</div>

<style>
  .campus-filter {
    position: relative;
  }

  .campus-select {
    color: var(--color-white);
    background-color: var(--color-purple-700);
  }

  select {
    padding: var(--space-xs) var(--space-s);
    border: 1px solid var(--color-purple-700);
    border-radius: 500px;
    background-color: var(--color-purple-700);
    cursor: pointer;
    appearance: none;
  }

  .campus-filter::after {
    content: "â–¼";
    position: absolute;
    right: var(--space-xs);
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-white);
    pointer-events: none;
  }

  @media (max-width: 810px) {
    .campus-select {

    }
  }
</style> 