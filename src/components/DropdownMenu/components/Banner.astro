---
interface Props {
  message: string;
  cta: string;
  ctaHref: string;
}

const { message, cta, ctaHref } = Astro.props;
---

<div class="banner body-xs">
  <span class="banner-title">{message}</span>
  <a href={ctaHref} class="banner-link">{cta}</a>
</div>

<style>
  a {
    color: var(--color-white);
    text-decoration: underline;
  }

  .banner {
    color: white;
    position: relative;
    z-index: 700;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-2xs);
    padding-inline: var(--space-s-m);
    background: linear-gradient(to right, var(--color-purple-500), var(--color-purple-400));
    height: 48px;
  }

  @media(max-width: 810px) {
    .banner {
      height: 32px;
    }
  }

</style>