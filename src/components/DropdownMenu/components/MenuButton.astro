---
import { Icon } from 'astro-icon/components';

interface Props {
  surface?: "white" | "dark";
}



const { surface, ...rest } = Astro.props;
---


<button class:list={["btn", surface]} {...rest} id="open-menu">
  <Icon name="mdi:menu" class="icon" />
</button>

<style>
  .btn {
    display: none;
    justify-content: center;
    align-items: center;
    padding: 0;
    height: var(--size-button-l);
    width: var(--size-button-l);
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .icon {
    min-width: var(--font-size-lg);
  }


  .white {
    color: var(--color-black);
  }

  .dark {
    color: var(--color-white);
  }
  
  @media(max-width: 810px) {
    .btn {
      display: flex;
    }
  }
</style>